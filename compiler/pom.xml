                        <artifactId>junit-jupiter-engine</artifactId>
                        <version>5.2.0-M1</version>
                    </dependency>
                </dependencies>
            </plugin> -->
            <plugin>
                <groupId>de.jflex</groupId>
                <artifactId>jflex-maven-plugin</artifactId>
                <version>1.9.1</version>
                <executions>
                    <execution>
                        <id>generate-hn2c-scanner</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.basedir}/src/main/java</outputDirectory>
                            <lexDefinitions>
                                <lexDefinition>${project.basedir}/src/main/resources/hypnode.flex</lexDefinition>
                            </lexDefinitions>
                            <verbose>true</verbose>
                            <jlex>true</jlex>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>de.jflex</groupId>
                <artifactId>cup-maven-plugin</artifactId>
                <version>1.3</version>
                <executions>
                    <execution>
                        <id>generate-hn2c-parser</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <parserName>Parser</parserName>
                    <generatedSourcesDirectory>${project.basedir}/src/main/java</generatedSourcesDirectory>
                    <cupSourceDirectory>${project.basedir}/src/main/resources</cupSourceDirectory>
                    <cupSourceFilesFilter>hypnode\.cup</cupSourceFilesFilter>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
